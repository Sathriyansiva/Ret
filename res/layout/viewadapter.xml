<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_search_gps"
    android:layout_width="match_parent"
    android:padding="5dp"

    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="center"

        android:background="@drawable/listlayout"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/sino1"
            android:layout_width="44dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="1dp"
            android:paddingLeft="10dp"
            android:text="Si.No"
            android:textSize="@dimen/listtext"
            android:textColor="#000000"

            />

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="1dp"
            android:paddingLeft="5dp"
            android:textSize="@dimen/listtext"

            android:text="Type "

            android:textColor="#000000"

            />

        <TextView
            android:id="@+id/tv_owname"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="1dp"
            android:paddingLeft="5dp"
            android:text="Owner Name"
            android:textSize="@dimen/listtext"

            android:textColor="#000000" />

        <TextView
            android:id="@+id/tv_shname"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="1dp"
            android:paddingLeft="5dp"
            android:text="Shop Name"
            android:textSize="@dimen/listtext"

            android:textColor="#000000" />

        <TextView
            android:id="@+id/tv_city"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="1dp"
            android:paddingLeft="5dp"

            android:text="City/Town"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/tv_state"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="1dp"
            android:paddingLeft="5dp"
            android:text="State"
            android:textSize="@dimen/listtext"

            android:textColor="#000000" />

        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center">

            <ImageView
                android:id="@+id/bt_mor"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginRight="1dp"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:src="@drawable/more"
                android:textColor="#000000" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center">

            <ImageView
                android:id="@+id/bt_Loc"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:src="@drawable/placeholder"
                android:textColor="#000000" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center">

            <ImageView
                android:id="@+id/bt_edit"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:src="@drawable/editinfo"
                android:textColor="#000000" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>